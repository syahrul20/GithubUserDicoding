<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sf.gtdng">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <permission android:name="com.sf.gtdng.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.sf.gtdng.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Fullscreen">
        <provider
            android:name=".provider.GithubUserProvider"
            android:authorities="com.sf.gtdng"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.sf.gtdng.READ_DATABASE"
            android:writePermission="com.sf.gtdng.WRITE_DATABASE"/>

        <receiver
            android:name=".broadcast.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DetailUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FavoriteActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReminderSettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>